{
  "name": "lectic-vscode",
  "displayName": "Lectic VS Code",
  "description": "Integrates the Lectic conversational tool into VS Code",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:lectic.submit",
    "onCommand:lectic.consolidate",
    "onCommand:lectic.explainSelection"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lectic.submit",
        "title": "Generate Next",
        "category": "Lectic"
      },
      {
        "command": "lectic.consolidate",
        "title": "Consolidate",
        "category": "Lectic"
      },
      {
        "command": "lectic.explainSelection",
        "title": "Explain Selection",
        "category": "Lectic"
      }
    ],
    "keybindings": [
      {
        "command": "lectic.submit",
        "key": "alt+l",
        "mac": "cmd+l",
        "when": "editorTextFocus && editorLangId == 'markdown' && resourceExtname =~ /\\.(lec|lectic)/"
      },
      {
        "command": "lectic.consolidate",
        "key": "alt+c",
        "mac": "cmd+c",
        "when": "editorTextFocus && editorLangId == 'markdown' && resourceExtname =~ /\\.(lec|lectic)/"
      },
      {
        "command": "lectic.explainSelection",
        "key": "alt+e",
        "mac": "cmd+e",
        "when": "editorHasSelection && editorLangId == 'markdown' && resourceExtname =~ /\\.(lec|lectic)/"
      }
    ],
    "configurationDefaults": {
      "files.associations": {
        "*.lec": "markdown",
        "*.lectic": "markdown"
      }
    },
    "configuration": {
      "title": "Lectic",
      "properties": {
        "lectic.executablePath": {
          "type": "string",
          "default": "lectic",
          "description": "Path to the lectic executable."
        },
        "lectic.blockBackgroundColor": {
          "type": "string",
          "default": "rgba(128, 128, 128, 0.1)",
          "description": "Background color for ::: delimited blocks. Use hex (#RRGGBB, #RRGGBBAA), rgba(r,g,b,a), or a VS Code theme color ID (e.g., 'editor.selectionBackground')."
        },
        "lectic.autoFoldToolCalls": {
          "type": "boolean",
          "default": false,
          "description": "Automatically fold regions after new content is generated by 'Generate Next'. Warning: This uses 'editor.foldAll' which may fold other parts of the document (like code blocks or sections) in addition to <tool-call> blocks."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.40.0",
    "typescript": "^5.0.0"
  }
}
